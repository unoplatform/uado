	<!--
	******************************************************************
		DEFAULT TEXTBLOCK STYLE
	******************************************************************
	-->

	<!-- Do not add FontFamily, FontWeight, Foreground or FontSize properties on the default style -->
	<!-- We need to be able to inherit those properties for changing ComboBoxItem or ListViewItem visual states for example -->
	<Style x:Key="DefaultTextBlockStyle"
		   TargetType="TextBlock">
		<Setter Property="LineStackingStrategy"
				Value="BlockLineHeight" />
		<Setter Property="TextTrimming"
				Value="CharacterEllipsis" />
		<Setter Property="TextWrapping"
				Value="Wrap" />
		<Setter Property="FontFamily"
				Value="{StaticResource FontFamily01}" />
	</Style>

